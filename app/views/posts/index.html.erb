<h1>Posts#index</h1>
<% @posts.each do |post| %><br>
  <%= post.title %> created by <%= post.author.email %><br>
    <% if current_author == post.author %>
      <%= link_to 'Edit post', edit_post_path(post) %>
      <%= link_to 'Destroy post', post_path(post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %> 
    <% end %>       
<% end %><br>

<%= link_to 'Create post', new_post_path %>
